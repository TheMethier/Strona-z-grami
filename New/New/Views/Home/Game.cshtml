@model New.Models.Gra
@{
    ViewData["Title"] = "Gra";
}

<div class="container-fluid" style="margin:10px;">
    <div class="row">
        <div class="col-sm">
            <div class="card" style="width:80vh;height:50vh;">
                <div class="card-header">
                    <header><h1 style="font-size:40px;font-family:'Gill Sans MT';">@Model.Nazwa</h1></header>
                </div>
                <div id="carouselExampleInterval" class="carousel slide w-100" data-bs-ride="carousel" style="margin-top:2vh;height:80vh;width:45vh;">
                    <div class="carousel-inner " style="width:80vh;height:45vh;">
                        <div class="carousel-item active" data-bs-interval="10000">
                            <img src="/images/@Model.Zdjęcie1" class="d-block w-100" alt="..." style="width:80vh;height:45vh;">
                        </div>
                        <div class="carousel-item" data-bs-interval="2000" style="width:80vh;height:45vh;">
                            <img src="~/images/@Model.Zdjęcie2" class="d-block w-100" alt="..." style="width:80vh;height:45vh;">
                        </div>
                        <div class="carousel-item" style="width:80vh;height:45vh;">
                            <img src="~/images/@Model.Zdjęcie3" class="d-block w-100" alt="..." style="width:80vh;height:45vh;">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <header><h1 style="font-size:80px;margin-top:15vh;margin-left:5vh;">@Model.Cena zł</h1></header>
            <button type="button" class="btn btn-warning" style=" margin-left:5vh;margin-top:3vh;width:40vh; height:20vh;"><h1 style="font-size:40px; color:white;" data-bs-toggle="modal" data-bs-target="#Kosz" >Dodaj do koszyka</h1></button>
        </div>
    </div>

