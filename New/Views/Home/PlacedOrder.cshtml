@{
    ViewData["Title"] = "Gra";
}

  
   <section class="h-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-8">
        <div class="card" style="border-radius: 10px;height:31rem;width:60rem;">
          <div class="card-header px-4 py-5">
            <h5 class="text-muted mb-0">Thanks for your Order, <span style="color: #a8729a;">@ViewBag.order.Username</span>!</h5>
          </div>
                            <table class="table table-sm table-responsive-md" style="background-color:rgba(247,247,247,255); height:10rem;width:50rem;margin-left:8vh; margin-top:5vh;">
                <thead style="background-color:black; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color:white;">
              <tr>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col">Cena</th>
                    <th scope="col">Ilość</th>
                </tr>
            </thead>
                        <tbody>

    @foreach (var item in ViewBag.games)
    {
     
                <tr>
                    <th scope="row">@item.ElementId</th>
                    <td>                <img class="card-img-top" src="~/images/okładka.jpeg" alt="Card image" style="height:20vh;width:14vh;" />
                    </td>
                    <td>                    <h4>@item.Gra.Nazwa</h4>
                    </td>
                    <td>                    <h5 >@item.Gra.Cena</h5>
                    </td>
                    <td>
                                       
                        <h3 >@item.ilość <br> </h3>
                


                    </td>

                </tr>
      
       
    }
    </tbody>
                </table>
                <div class="d-flex justify-content-between pt-2">
              <p class="fw-bold mb-0">Szczegóły zamówienia:</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Razem</span> @ViewBag.order.Razem zł</p>
            </div>

            <div class="d-flex justify-content-between pt-2">
              <p class="text-muted mb-0">ID : @ViewBag.order.Id</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Rabat:</span> 0</p>
            </div>

            <div class="d-flex justify-content-between">
              <p class="text-muted mb-0">Data zamówienia : @ViewBag.order.CreatedDate</p>
            </div>

            <div class="d-flex justify-content-between mb-5">
              <p class="text-muted mb-0">Recepits Voucher : 18KU-62IIK</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Koszty dostawy:</span> Za darmo</p>
            </div>
          </div>
          <div class="card-footer border-0 px-4 py-5"
            style="background-color: black; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px; width:60rem;">
            <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">
                Do zapłaty:
                <span class="h2 mb-0 ms-2">@ViewBag.order.Razem zł</span></h5>
          </div>



          </div>
          
          
          </div>
                    </div>
          </div>
          </div>
          </div>
         </div>
        </section>
        
