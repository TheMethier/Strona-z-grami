@model New.Models.Order
@{
    ViewData["Title"] = "Zamówienie";
}

<form asp-action="MakeOrder">
 <div class="row">

  <div class="col-md-8 mb-4">
    <div class="card mb-4">
      <div class="card-header py-3">
        <h5 class="mb-0">Szczegóły zamówienia</h5>
      </div>
      <div class="card-body">
       <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
        
          <!-- Text input -->
          <div class="form-outline mb-4">
    		<input asp-for="Username" type="text" class="form-control" placeholder="Username">
            <label asp-for="Username" for="recipient-name" class="form-label">Username</label>
           <span asp-validation-for="Username" class="text-danger"></span>

          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
    		<input asp-for="Email" type="text" class="form-control" placeholder="Email">
            <label asp-for="Email" for="recipient-name" class="col-form-label">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
  
        </div>

          <!-- Number input -->
          <div class="form-outline mb-4">
            		<input asp-for="CreditCard" type="text" class="form-control" placeholder="XXXX-XXXX-XXXX-XXXX">
            <label asp-for="CreditCard" for="recipient-name" class="col-form-label">Numer karty kredytowej:</label>
            <span asp-validation-for="CreditCard" class="text-danger"></span>

         
        </div>
        
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="card mb-4">
      <div class="card-header py-3">
        <h5 class="mb-0">Podsumowanie:</h5>
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
<span>Gry:</span>
</li>
         @foreach(var item in ViewBag.cart)
            {
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">

@item.Ilość x @item.Gra.Nazwa:            
            <span> @item.Razem zł</span>
          </li>
            }
          <li class="list-group-item d-flex justify-content-between align-items-center px-0">
 
              Rabaty:

            <span>Może?</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
            <div>
              <strong>Razem</strong>
              
            </div>
            <span><strong>@ViewBag.razem</strong></span>
          </li>
        </ul>
           <div class="form-group">
        <input type="submit" value="Zamów!" class="btn btn-dark btn-lg btn-block"/> 
       </div>
      </div>
    </div>
  </div>
</div>
</form>
